{
  "env": {
    "browser": true,
    "es2021": true
  },
  "extends": ["google", "rxjs-tslint-rules"],
  "parser": "@typescript-eslint/parser",
  "parserOptions": {
    "ecmaVersion": 12,
    "sourceType": "module"
  },
  "plugins": ["@typescript-eslint"],
  "rules": {
    "array-type": false,
    "arrow-parens": 2,
    "deprecation": {
      "severity": "warning"
    },
    "component-class-suffix": true,
    "contextual-lifecycle": true,
    "directive-class-suffix": true,
    "directive-selector": [true, "attribute", "app", "camelCase"],
    "component-selector": [true, "element", "app", "kebab-case"],
    "import-blacklist": [true, "rxjs/Rx"],
    "interface-name": false,
    "max-classes-per-file": false,
    "max-line-length": [true, 400],
    "member-access": false,
    "member-ordering": [
      true,
      {
        "order": [
          "static-field",
          "instance-field",
          "static-method",
          "instance-method"
        ]
      }
    ],
    "no-consecutive-blank-lines": false,
    "no-console": [true, "debug", "info", "time", "timeEnd", "trace"],
    "no-empty": 1,
    "no-inferrable-types": [true, "ignore-params"],
    "no-non-null-assertion": true,
    "no-redundant-jsdoc": true,
    "no-switch-case-fall-through": true,
    "no-var-requires": false,
    "object-literal-key-quotes": [true, "as-needed"],
    "object-literal-sort-keys": false,
    "ordered-imports": false,
    "quotemark": [true, "single"],
    "trailing-comma": false,
    "no-conflicting-lifecycle": true,
    "no-host-metadata-property": true,
    "no-input-rename": true,
    "no-inputs-metadata-property": true,
    "no-output-native": true,
    "no-output-on-prefix": true,
    "no-output-rename": true,
    "no-outputs-metadata-property": true,
    "template-banana-in-box": true,
    "template-no-negated-async": true,
    "use-lifecycle-interface": true,
    "use-pipe-transform-interface": true,
    "brace-style": [2, "1tbs", { "allowSingleLine": true }],
    "rxjs-no-async-subscribe": { "severity": "error" },
    "rxjs-no-compat": { "severity": "error" },
    "rxjs-no-connectable": { "severity": "error" },
    "rxjs-no-create": { "severity": "error" },
    "rxjs-no-explicit-generics": { "severity": "error" },
    "rxjs-no-ignored-notifier": { "severity": "error" },
    "rxjs-no-ignored-replay-buffer": { "severity": "error" },
    "rxjs-no-ignored-observable": { "severity": "error" },
    "rxjs-no-ignored-subscription": { "severity": "error" },
    "rxjs-no-ignored-takewhile-value": { "severity": "error" },
    "rxjs-no-implicit-any-catch": { "severity": "error" },
    "rxjs-no-index": { "severity": "error" },
    "rxjs-no-internal": { "severity": "error" },
    "rxjs-no-nested-subscribe": { "severity": "error" },
    "rxjs-no-sharereplay": {
      "options": [
        {
          "allowConfig": true
        }
      ],
      "severity": "error"
    },
    "rxjs-no-subclass": { "severity": "error" },
    "rxjs-no-subject-unsubscribe": { "severity": "error" },
    "rxjs-no-subject-value": { "severity": "error" },
    "rxjs-no-unbound-methods": { "severity": "error" },
    "rxjs-no-unsafe-catch": { "severity": "error" },
    "rxjs-no-unsafe-first": { "severity": "error" },
    "rxjs-no-unsafe-scope": {
      "options": [
        {
          "allowSubscribe": false
        }
      ],
      "severity": "error"
    },
    "rxjs-no-unsafe-subject-next": { "severity": "error" },
    "rxjs-no-unsafe-switchmap": { "severity": "error" },
    "rxjs-no-unsafe-takeuntil": { "severity": "error" },
    "rxjs-throw-error": { "severity": "error" }
  }
}
